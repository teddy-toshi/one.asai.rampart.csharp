root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = off
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{cs,tt}]
charset = utf-8-bom
end_of_line = crlf
indent_size = 4

[*.sln]
charset = utf-8-bom
end_of_line = crlf
indent_size = 2
